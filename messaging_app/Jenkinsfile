pipeline {
    agent any
    environment {
        // IDs must match the credentials created in Jenkins
        GITHUB_CREDS = 'github-token'
        DOCKER_CREDS = 'dockerhub-creds'
        // 🚨 يجب تغيير الأسماء هنا 
        REPO_URL = 'https://github.com/diaamohammad/alx-backend-python.git'
        DOCKER_IMAGE_NAME = 'diaaalsemary5/messaging-app'
    }
    stages {
        // === المرحلة 1: سحب الكود والتحقق ===
        stage('1. Checkout Code') {
            steps {
                git url: REPO_URL, credentialsId: GITHUB_CREDS, branch: 'main'
            }
        }
        
        // === المرحلة 2: تشغيل الاختبارات (pytest) ===
        stage('2. Run Tests (pytest)') {
            // ✅ Fix: استخدام الصيغة الصحيحة لـ tools 
            tools {
                python 'Python 3.10' 
            }
            steps {
                dir('messaging_app') {
                    // تثبيت الاعتماديات
                    sh 'pip install -r requirements.txt'
                    sh 'pip install pytest'
                    // تشغيل الاختبارات
                    sh 'pytest --junitxml=test-report.xml || true'
                }
            }
            post {
                always {
                    // حفظ تقرير الاختبارات 
                    junit 'messaging_app/test-report.xml'
                }
            }
        }
        
        // === المرحلة 3: بناء صورة Docker (المهمة 1) ===
        stage('3. Build Docker Image') {
            steps {
                dir('messaging_app') {
                    script {
                        def appImage = docker.build("${DOCKER_IMAGE_NAME}:${env.BUILD_NUMBER}", ".")
                    }
                }
            }
        }
        
        // === المرحلة 4: رفع الصورة لـ Docker Hub (المهمة 1) ===
        stage('4. Push to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', DOCKER_CREDS) {
                        // رفع الصورة برقم الـ build و tag الـ latest
                        docker.image("${DOCKER_IMAGE_NAME}:${env.BUILD_NUMBER}").push()
                        docker.image("${DOCKER_IMAGE_NAME}:latest").push()
                    }
                }
            }
        }
    }
}
